<div class="post-container" style="height: 768px;">
    <center><span style="color:#208040; font-size: 20px; font-weight: 700;">Purchase this book</span><br><br>Are you sure you want to purchase this book?</center>
    <div class="post-container-media">
        <img src="assets/images/placeholder-post-picture.png">
    </div>
    <table>
        <tr>
            <th>Title</th>
            <td><%= item.title %></td>
        </tr>
        <tr>
            <th>Type</th>
            <td><%= item.type %></td>
        </tr>
        <tr>
            <th>Seller</th>
            <td><%= seller %></td>
        </tr>
        <tr>
            <th>Price</th>
            <td>&dollar;<%= item.price %></td>
        </tr>
    </table>
    <br>
    <div class="userinput-container-form">
        <form action="/checkoutComplete?id=<%= item._id %>&type=<%= type %>" method="post">
            <input type="text" id="cardName" name="cardName" placeholder="Card Name" required /><br />
            <input type="text" id="cardNumber" name="cardNumber" placeholder="Card Number" pattern="[0-9]{13,16}" required /><br />
            <input type="text" id="cardCVV" style="width: 42%;" name="cardCVV" placeholder="CVV" pattern="[0-9]{3}" required />
            <input type="text" id="cardExpiry" style="width: 42%;" name="cardExpiry" placeholder="Expiry Date" pattern="[0-9]{2}/[0-9]{2}" required /><br />
            <input type="text" id="phoneNumber" name="phoneNumber" placeholder="Phone Number" pattern="[0-9]{10}" required /><br />
            <input type="email" id="emailID" name="emailId" placeholder="Email Address" required /><br />
            <input type="submit" value="Purchase" style="width: 45%;" />
            <input type="reset" value="Reset" style="width: 45%;"/>
        </form>
    </div>
    <br>
    <center>
        <!-- <a class="post-container-button" style="background-color: #40c080; color: #ffffff;" href=""><img src="assets/icons/get.png" alt="Purchase">Purchase</a>
        &nbsp;&nbsp;&nbsp; -->
        <a class="post-container-button" href="/">Cancel Purchase</a>
    </center>
</div>